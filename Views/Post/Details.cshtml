@model Post

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Pacchetto</h1>
            </div>
            <div class="post-single-image-container">
                <img style= "max-width: 300px; height: 200px;" src="@Model.Image">
            </div>
            <p>
                <strong>Titolo:</strong>
                @Model.Title
            </p>
            <p>
                <strong>Contenuto:</strong>
                @Model.Description
            </p>

            <p>
                <strong>Prezzo:</strong>
                @Model.Price
            </p>
        </div>
    </div>
</div>